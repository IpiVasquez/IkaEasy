{
    "manifest_version": 2,
    "short_name": "IkaEasy",
    "background": {
        "scripts": ["inner/background.min.js"],
        "persistent": true
    },
    "page_action": {
        "default_icon": "icon/128.png",
        "default_title": "ikariam"
    },
    "content_scripts": [
        {
            "js": [
                "app.min.js"
            ],
            "matches": [
                "http://*.ikariam.gameforge.com/*",
                "https://*.ikariam.gameforge.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "description": "Adds a lot of helpful functionality to Ikariam",
    "icons": {
        "128": "icon/128.png",
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png"
    },

